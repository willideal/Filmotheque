<table>
	<TR>
             <TH>Titre</TH>
             <TH>Description</TH>
             <TH>Catégorie</TH>
    </TR>
{% for a in films %}
    <tr>
	<td>{{ a.titre }}</td>
	<td>{{ a.description }}</td>
	<td>{{ a.categorie }}</td>
	<td><a href="{{ path('myapp_film_modifier', { 'id': a.id }) }}">Modifier</a></td>
	<td><a href="{{ path('myapp_film_supprimer', { 'id': a.id }) }}">Supprimer</a></td>
{% else %}
    <tr>
	<td>Aucun film n'a été trouvé.</td>
    </tr>
{% endfor %}
</table>
